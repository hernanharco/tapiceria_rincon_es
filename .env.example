# ------------------------------------------------------------------------------
# CONFIGURACIÓN DEL FRONTEND (Vite / React)
# ------------------------------------------------------------------------------
# URL del Backend para las peticiones de la API
VITE_API_URL=https://tu-url-de-cloudflare.trycloudflare.com

# ------------------------------------------------------------------------------
# CONFIGURACIÓN DEL BACKEND (Django)
# ------------------------------------------------------------------------------
# Clave secreta para producción (Generar una nueva)
SECRET_KEY=django-insecure-tu-clave-secreta-aqui

# Hosts permitidos (Separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend,.trycloudflare.com

# Configuración de CORS (Debe coincidir con la URL del Frontend)
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://tu-url-de-cloudflare.trycloudflare.com

# ------------------------------------------------------------------------------
# PERSISTENCIA (Base de Datos Neon / PostgreSQL)
# ------------------------------------------------------------------------------
USE_REMOTE_DB=True
# Formato: postgresql://user:password@endpoint/dbname?sslmode=require
DATABASE_URL=postgresql://usuario:password@host-de-neon/dbname?sslmode=require

# ------------------------------------------------------------------------------
# ALMACENAMIENTO DE RECURSOS (Cloudinary)
# ------------------------------------------------------------------------------
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# ------------------------------------------------------------------------------
# DOCKER CONFIG (Si usas variables en el docker-compose)
# ------------------------------------------------------------------------------
DB_USER=neondb_owner
DB_PASSWORD=tu_password_neon